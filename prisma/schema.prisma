// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

// schema.prisma
model Customer {
  id      Int      @id @default(autoincrement())
  name    String
  users user?
  deliveries Delivery[]
}


model DeliveryMan {
  id      Int      @id @default(autoincrement())
  name    String
  users user?
  deliveries Delivery[]
}

model Restaurant {
  id            Int      @id @default(autoincrement())
  email         String
  password      String
  name          String
  adressePostal Int
  card          Card?
  users         user?
  deliveries    Delivery[]
}


model user {
  DeliveryMan      DeliveryMan   @relation(fields: [deliveryManId], references: [id])
  deliveryManId    Int @unique
  customer        Customer      @relation(fields: [customerId], references: [id])
  customerId      Int @unique
  restaurant      Restaurant    @relation(fields: [restaurantId], references: [id])
  restaurantId    Int @unique
  
}

model Card {
  id     Int  @id @default(autoincrement())
  restaurant   Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId Int @unique
  menu Menu[]
  dish Dish[]
}

model Menu {
  id     Int @id @default(autoincrement())
  card    Card @relation(fields: [cardId], references: [id])
  cardId Int
  dishes DishOnMenu[]
  orderitem  OrderItem @relation(fields: [orderId], references: [id])
  orderId Int
}

model Dish{
  id     Int @id @default(autoincrement())
  card    Card @relation(fields: [cardId], references: [id])
  cardId Int
  menus DishOnMenu[]
  orderitem  OrderItem @relation(fields: [orderId], references: [id])
  orderId Int
}

model DishOnMenu {
  menu       Menu     @relation(fields: [menuId], references: [id])
  menuId     Int 
  dish   Dish @relation(fields: [dishId], references: [id])
  dishId Int
  @@id([menuId, dishId])
}

model OrderItem {
  id  Int @id @default(autoincrement())
  menu Menu[]
  dish Dish[]
  delivery Delivery[]
}

model Delivery {
  id          Int       @id @default(autoincrement())
  deliveryMan DeliveryMan @relation(fields: [deliveryManId], references: [id])
  deliveryManId Int
  customer    Customer  @relation(fields: [customerId], references: [id])
  customerId  Int
  restaurant  Restaurant @relation(fields: [restaurantId], references: [id])
  restaurantId Int
  orderitem  OrderItem @relation(fields: [orderitemId], references: [id])
  orderitemId Int
}